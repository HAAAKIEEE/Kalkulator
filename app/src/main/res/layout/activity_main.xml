<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_primary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="80sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txAngka"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F1B6F6"
            android:onClick="delete"
            android:padding="-10dp"

            android:textColor="#FF5722"
            app:icon="@drawable/back"
            app:strokeColor="#FF5722" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F1B6F6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ac"
            android:layout_width="88dp"
            android:layout_height="65dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#F1B6F6"
            android:onClick="allClear"
            android:text="AC"
            android:textSize="30sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/modulus"
            android:layout_width="88dp"
            android:layout_height="65dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#F1B6F6"
            android:onClick="modulus"
            android:text="%"
            android:textSize="34sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/bagi"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#F1B6F6"
            android:onClick="bagi"
            android:text="/"
            android:textSize="34sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/kali"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#F1B6F6"
            android:onClick="kali"
            android:text="x"
            android:textSize="34sp"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tujuh"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#D7D1FF"
            android:onClick="tujuh"
            android:text="7"
            android:textSize="34sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/delapan"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#D7D1FF"
            android:onClick="delapan"
            android:text="8"
            android:textSize="34sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/sembilan"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#D7D1FF"
            android:onClick="sembilan"
            android:text="9"
            android:textSize="34sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/kurang"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#F1B6F6"
            android:onClick="kurang"
            android:text="-"
            android:textSize="34sp"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/empat"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#D7D1FF"
            android:onClick="empat"
            android:text="4"
            android:textSize="34sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/lima"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#D7D1FF"
            android:onClick="lima"
            android:text="5"
            android:textSize="34sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/enam"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#D7D1FF"
            android:onClick="enam"
            android:text="6"
            android:textSize="34sp"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/tambah"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#F1B6F6"
            android:onClick="tambah"
            android:text="+"
            android:textSize="34sp"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/satu"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:backgroundTint="#D7D1FF"
                android:onClick="satu"
                android:text="1"
                android:textSize="34sp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/kuranglebih"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:backgroundTint="#F1B6F6"
                android:onClick="plusMinus"
                android:text="+/-"
                android:textSize="23sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/dua"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:backgroundTint="#D7D1FF"
                android:onClick="dua"
                android:text="2"
                android:textSize="34sp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/nol"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:backgroundTint="#D7D1FF"
                android:onClick="nol"
                android:text="0"
                android:textSize="34sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/tiga"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:backgroundTint="#D7D1FF"
                android:onClick="tiga"
                android:text="3"
                android:textSize="34sp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/koma"
                android:layout_width="90dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:backgroundTint="#F1B6F6"
                android:onClick="dot"
                android:text=","
                android:textSize="34sp"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/samadengan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FF05C8"
            android:onClick="samadengan"
            android:text="="
            android:textSize="34sp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>
